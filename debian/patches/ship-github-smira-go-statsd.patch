+			// return buffer to the pool
+			select {
+			case c.bufPool <- buf:
+			default:
+				// pool is full, let GC handle the buf
+			}
+		case <-reconnectC:
+			_ = sock.Close() // nolint: gosec
+			goto RECONNECT
+		}
+	}
+
