+	reportTicker := time.NewTicker(c.options.ReportInterval)
+	defer reportTicker.Stop()
+
+	for {
+		select {
+		case <-c.shutdown:
+			return
+		case <-reportTicker.C:
+			lostPeriod := atomic.SwapInt64(&c.lostPacketsPeriod, 0)
+			if lostPeriod > 0 {
+				c.options.Logger.Printf("[STATSD] %d packets lost (overflow)", lostPeriod)
+			}
+		}
+	}
+}
