#!/bin/sh

set -e

service_user="prometheus-statsd-exporter"

case "$1" in
  configure)
    if ! getent passwd "$service_user" > /dev/null; then
        adduser --quiet --system --home "/var/lib/$service_user" --no-create-home \
            --group --gecos "$service_user" "$service_user" || true
    fi

  ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
